<body>
    <h1>Rock-Paper-Scissors</h1>

    <button id="rock">Rock</button>
    <button id="paper">Paper</button>
    <button id="scissors">Scissors</button>

    <div id="result"></div>

    <button id="restart" style="display: none;">Play again</button>



    <script>
      let humanScore = 0;
      let computerScore = 0;

      const resultDiv = document.getElementById('result');



      function  getComputerChoice() {
        const randomNum = 3 * Math.random();
        if (randomNum < 1) {
            return 'rock';
        }else if (randomNum < 2) {
            return 'paper';
        }else {
            return 'scissors';
        }
      }
      //console.log(getComputerChoice())
     function playRound(humanChoice) {
        const computerChoice = getComputerChoice()


        if (humanChoice === computerChoice) {
            resultDiv.textContent = `Tie! \nyou both choise: ${humanChoice}.`;
        } else if (
            (humanChoice === 'rock' && computerChoice === 'scissors') ||
            (humanChoice === 'paper' && computerChoice === 'rock') ||
            (humanChoice === 'scissors' && computerChoice === 'paper')
    ) {
        humanScore++;
        resultDiv.textContent = `You won! \n${humanChoice} won a ${computerChoice}.`;
    } else {
        computerScore++;
        resultDiv.textContent = `You lost! \n${computerChoice} won a ${humanChoice}.`;
    } 
    resultDiv.textContent += `\nScore: You - ${humanScore}, computer - ${computerScore}`;
        

        if (humanScore === 5 || computerScore === 5){

            const winner = humanScore === 5 ? `You won a game!` : `Computer won!`;
            resultDiv.textContent += `\n${winner}`;

            document.getElementById('rock').disabled = true;
            document.getElementById('paper').disabled = true;
            document.getElementById('scissors').disabled = true;
            document.getElementById('restart').style.display = 'inline';
        }
    }

    document.getElementById('rock').addEventListener('click', () => playRound('rock'));
    document.getElementById('paper').addEventListener('click', () => playRound('paper'));
    document.getElementById('scissors').addEventListener('click', () => playRound('scissors'));
    document.getElementById('restart').addEventListener('click', () => {
        humanScore = 0;
        computerScore = 0;
        resultDiv.textContent = '';


        document.getElementById('rock').disabled = false
        document.getElementById('paper').disabled = false
        document.getElementById('scissors').disabled = false

        document.getElementById('restart').style.display = 'none';
    });

       /* function game() {
            for (let i = 1; i <= 5; i++) {
                console.log(`Round ${i}`);
                const humanChoice = getHumanChoice();
        const computerChoice = getComputerChoice();
        playRound(humanChoice, computerChoice);
            } 
            console.log('Game over!');
            if (humanScore > computerScore) {
                console.log('congradulation! You won.');
            } else if (humanScore < computerScore) {
                console.log('oops... You lost.')
            } else {
                console.log('Tie!');
            }
        }

       game() */


     
     //console.log(getHumanChoice())
     /*let scissors = 'Scissors';
     let paper = 'Paper';
     let rock = 'Rock'
    

     function resultGame() {
